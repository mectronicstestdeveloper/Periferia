@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Categoría";
}

<div class="row">

    <div class="col-md-12">
        <div class="kt-portlet">
            @*<div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
